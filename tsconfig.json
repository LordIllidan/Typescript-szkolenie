{
    "compilerOptions": {
      "target": "es6",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["es2016", "esnext", "dom"],
      "outDir": "dist/",
      "rootDir": "./src/",
      "strict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
    },
    "include": ["src/app.ts"],
    "exclude": ["dist"]
  }